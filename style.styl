*, *:before, *:after
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

html, body
  height 100%

.previewGenerator
  &__preview
    display inline-block
    vertical-align top
    border 1px solid #ccc
    border-radius 4px
    user-select none
    &__arrow
      display inline-block
      vertical-align top
      width 30px
      // height is handled by this.props.file.size in component
      background-color #eee
      text-align center
      cursor pointer
      &:hover
        background-color #ddd
        border-color #aaa
      & > i
        position relative
        top calc(50% - 10px)
        font-size 20px
      &.arrowleft
        border-top-left-radius 4px
        border-bottom-left-radius 4px
      &.arrowright
        border-top-right-radius 4px
        border-bottom-right-radius 4px
      &.disabled
        color #aaa
        background-color #e7e7e7
        cursor auto
    &__img
      display inline-block
      vertical-align top
      // wrapper has 4 px more heigh than it's child image. Removed with this negativ margin
      margin-bottom -4px
      cursor pointer
  &__data
    display inline-block
    vertical-align top
    &__info
      &__title, &__size, &__modifiedat
        padding 5px 5px 5px 20px
        & > span
          font-weight bold
    &__action
      display inline-block
      vertical-align top
      padding 20px 5px 5px 20px
      .btn
        margin-right 15px
        vertical-align bottom
